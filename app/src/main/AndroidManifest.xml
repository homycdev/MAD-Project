<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.innohelpers.innohelp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".InnoHelpApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Innohelp">
        <activity android:name=".activity.ViewCareActivity"
            android:label="@string/care"/>
        <activity
            android:name=".activity.ViewDeliveryActivity"
            android:label="@string/delivery"
            android:theme="@style/Theme.Innohelp.NoActionBar" />
        <activity
            android:name=".activity.ViewOrderActivity"
            android:label="@string/order" />
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/login" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.NewCareActivity"
            android:label="@string/new_care" />
        <activity
            android:name=".activity.NewOrderActivity"
            android:label="@string/new_order" />
        <activity
            android:name=".activity.NewDeliveryActivity"
            android:label="@string/title_activity_new_delivery"
            android:theme="@style/Theme.Innohelp.NoActionBar" />
    </application>

</manifest>